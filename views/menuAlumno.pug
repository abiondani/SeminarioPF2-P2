extends layout

block content
    h3 Notas de #{alumno.apellido}, #{alumno.nombre}
    if cursos && cursos.length > 0
        table.table.table-striped
            thead
                tr
                    th Materia
                    th Profesor
                    th Calificaci√≥n
            tbody
                each curso in cursos
                    tr
                        td= curso.materia
                        td= curso.profesor
                        td= curso.calificacion
    else
        br
        .alert.alert-warning(role="alert") El alumno no posee notas

    a.btn.btn-secondary.mt-3(href="/logout") Salir