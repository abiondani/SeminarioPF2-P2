extends layout

block content
    h3 Iniciar Sesión
    form(action="/login", method="POST")
      .form-group
        label(for="usuario") Usuario
        input#usuario.form-control(type="text", name="usuario", required)
      .form-group
        label(for="contrasena") Contraseña
        input#contrasena.form-control(type="password", name="contrasena", required)
      button.btn.btn-primary(type="submit") Iniciar Sesión
      if error
        br
        br
        .alert.alert-danger(role="alert") #{error}

        